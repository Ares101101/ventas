---
interface Props {
	title: string;
	
	href: string;
}

const { href, title, } = Astro.props;
---

<li id="link-card" class="flex h-10 bg-transparent hover:bg-gradient-to-r from-cyan-500 to-blue-500 rounded-2xl  ">
	<a href={href}  class="text-lg flex justify-center items-center text-white h-full pr-4 pl-4 rounded-2xl hover:outline-none outline outline-1 " >
			{title}
	</a>
</li>

	
